<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.securemypasswords.securemypasswords.PasswordManage"
    android:background="@color/background_color">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="10dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<TextView
                android:id="@+id/tv_passManage_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="@string/title"/>-->
            <TextView
                android:id="@+id/tv_passManage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/title"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:id="@+id/et_passManage_titleContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tv_passManage_title"
                android:inputType="text|textAutoComplete|textAutoCorrect" />

            <TextView
                android:id="@+id/tv_passManage_urlTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/managePasswordURL"
                app:layout_constraintTop_toBottomOf="@+id/et_passManage_titleContent"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:id="@+id/et_passManage_urlContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tv_passManage_urlTitle"
                android:inputType="textWebEditText|textUri" />

            <TextView
                android:id="@+id/tv_passManage_userNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/managePasswordName"
                app:layout_constraintTop_toBottomOf="@+id/et_passManage_urlContent"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:id="@+id/et_passManage_userNameContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tv_passManage_userNameTitle"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tv_passManage_passwordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/managePasswordPassword"
                app:layout_constraintTop_toBottomOf="@+id/et_passManage_userNameContent"
                tools:ignore="RtlSymmetry" />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_passManage_passwordContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tv_passManage_passwordTitle"
                android:inputType="textPassword"
                app:passwordToggleEnabled="true"/>

            <TextView
                android:id="@+id/tv_passManage_noteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/managePasswordNotes"
                tools:ignore="RtlSymmetry"
                app:layout_constraintTop_toBottomOf="@+id/et_passManage_passwordContent"/>

            <EditText
                android:id="@+id/et_passManage_noteContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:inputType="textMultiLine"
                app:layout_constraintTop_toBottomOf="@+id/tv_passManage_noteTitle"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:autoSizeTextType="uniform" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <Button
        android:id="@+id/entry_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Save"/>
</android.support.constraint.ConstraintLayout>
